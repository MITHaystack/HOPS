@startuml
skinparam state {
  ArrowColor #A31F34  
  Bordercolor #8a8b8c
  BackgroundColor #fffff0
}

[*] --> itemInStock
itemInStock --> itemOrdered : order placed
itemOrdered --> itemDelivered : sent
itemOrdered --> itemInStock : cancelled
itemDelivered --> itemReceived : item received
itemReceived --> itemInStock : returned
itemReceived --> [*]
@enduml
